# =============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual credentials
# NEVER share or commit the .env file to version control!
# =============================================================================

# =============================================================================
# Chrome WebDriver Configuration
# =============================================================================

# Run browser without GUI (true/false)
HEADLESS=false

# Enable stealth mode to avoid bot detection (true/false)
STEALTH_MODE=false

# User agent string (leave empty for auto-generation)
USER_AGENT=

# User agent platform for auto-generation (windows/mac/linux/random)
# Only used if USER_AGENT is empty
USER_AGENT_PLATFORM=random

# Default wait time for element lookups (seconds)
IMPLICIT_WAIT=10

# Browser window size (used in headless mode)
WINDOW_SIZE=1920x1080

# =============================================================================
# Directory Settings
# =============================================================================

# Directory for downloaded files (relative or absolute path)
DOWNLOAD_DIR=./Outputs/Downloads

# Chrome profile directory for persistent sessions (optional)
# Windows: C:\Users\YourUsername\AppData\Local\Google\Chrome\User Data\Developer
# Mac: ~/Library/Application Support/Google/Chrome/Developer
# Linux: ~/.config/google-chrome/Developer
PROFILE_DIR=

# Log file location
LOG_FILE=webdriver.log

# =============================================================================
# Logging Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Microsoft Login Credentials
# =============================================================================

# Microsoft account username/email
MICROSOFT_USERNAME=your.email@example.com

# Microsoft account password
MICROSOFT_PASSWORD=YourSecurePassword123!

# Stay signed in after login (true/false)
STAY_SIGNED_IN=false

# =============================================================================
# Concurrency Settings
# =============================================================================

# Maximum number of concurrent workers for parallel execution
MAX_WORKERS=3
